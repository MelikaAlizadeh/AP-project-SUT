<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Line?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          prefHeight="750" prefWidth="1200"
          stylesheets="@../css/Styles.css"
          alignment="CENTER_LEFT"
          fx:controller="View.RegisterMenu"
          style="-fx-padding: 40px">
    <VBox styleClass="registerContainer" alignment="CENTER_LEFT">
        <HBox styleClass="registerFieldContainer" alignment="CENTER">
            <VBox style="-fx-spacing: 8px" alignment="CENTER">
                <HBox>
                    <Label text="username:" styleClass="registerLabel"/>
                    <TextField promptText="username" styleClass="textField1"/>
                </HBox>
                <Label text="Username field is empty!" styleClass="errorLabel"/>
            </VBox>
        </HBox>
        <VBox styleClass="registerFieldContainer" alignment="CENTER">
            <VBox style="-fx-spacing: 8px">
                <HBox>
                    <Label text="password:" styleClass="registerLabel"/>
                    <TextField promptText="password" fx:id="password" styleClass="textField1"/>

                </HBox>
                <HBox styleClass="subRegisterFieldContainer">
                    <CheckBox text="random"/>
                    <CheckBox text="hide/show" onMouseClicked="#showPassword"/>
                </HBox>
            </VBox>
            <VBox alignment="CENTER">
                <Label text="Password field is empty!" styleClass="errorLabel"/>
            </VBox>
        </VBox>
        <HBox styleClass="registerFieldContainer" alignment="CENTER">
            <VBox style="-fx-spacing: 8px" alignment="CENTER">
                <HBox>
                    <Label text="nickname:" styleClass="registerLabel"/>
                    <TextField promptText="nickname" styleClass="textField1"/>
                </HBox>
                <Label text="Nickname field is empty!" styleClass="errorLabel"/>
            </VBox>
        </HBox>
        <HBox styleClass="registerFieldContainer" alignment="CENTER">
            <VBox  style="-fx-spacing: 8px" alignment="CENTER">
                <HBox>
                    <Label text="email:" styleClass="registerLabel"/>
                    <TextField promptText="email" styleClass="textField1"/>
                </HBox>
                <Label text="Email field is empty!" styleClass="errorLabel"/>
            </VBox>
        </HBox>
        <VBox styleClass="registerFieldContainer" alignment="CENTER">
            <fx:define>
                <ToggleGroup fx:id="group"/>
            </fx:define>
            <HBox alignment="CENTER_LEFT" style="-fx-spacing: 10px">
                <RadioButton styleClass="radioButton" toggleGroup="$group" onMouseClicked="#famousSlogan"/>
                <Label text="Famous Slogans" styleClass="sloganLabel"/>
                <ComboBox fx:id="sloganComboBox" styleClass="famousSlogan" visible="false"/>

            </HBox>
            <HBox alignment="CENTER_LEFT" style="-fx-spacing: 10px">
                <RadioButton styleClass="radioButton" toggleGroup="$group" onMouseClicked="#randomSlogan"/>
                <Label text="Random Slogan" styleClass="sloganLabel"/>
                <TextField promptText="slogan" fx:id="randomSlogan" styleClass="textField3" visible="false"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" style="-fx-spacing: 10px">
                <RadioButton styleClass="radioButton" toggleGroup="$group" onMouseClicked="#customSlogan"/>
                <Label text="Custom Slogan" styleClass="sloganLabel"/>
                <TextField promptText="slogan" fx:id="customSlogan" styleClass="textField3" visible="false"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" style="-fx-spacing: 10px">
                <RadioButton styleClass="radioButton" toggleGroup="$group" onMouseClicked="#noSlogan"/>
                <Label text="No Slogan" styleClass="sloganLabel"/>
            </HBox>
            <VBox alignment="CENTER">
                <Label text="No slogan mode has been selected!" styleClass="errorLabel"/>
            </VBox>
        </VBox>
        <HBox styleClass="registerFieldContainer" style="-fx-pref-height: 200px;" alignment="CENTER">
            <VBox style="-fx-spacing: 8px" alignment="CENTER">
                <HBox style="-fx-spacing: 8px" >
                    <VBox>
                        <VBox>
                            <Label text="Security Question:" style="-fx-pref-width: 300px" styleClass="registerLabel"/>
                        </VBox>
                        <ListView fx:id="listView" styleClass="listView"/>
                    </VBox>
                    <VBox>
                        <Label text="answer:" styleClass="registerLabel"/>
                        <TextField promptText="answer" styleClass="textField2"/>
                        <Label text="" styleClass="registerLabel"/>
                        <Label text="confirm:" styleClass="registerLabel"/>
                        <TextField promptText="confirm" styleClass="textField2"/>
                    </VBox>
                </HBox>
                <Label text="No security question has been selected!" styleClass="errorLabel"/>
            </VBox>
        </HBox>
        <HBox styleClass="registerFieldContainer" style="-fx-spacing: 10px" alignment="CENTER">
            <Button text="submit" styleClass="submitButton"/>
            <Button text="clear" styleClass="clearButton"/>
        </HBox>
    </VBox>
</GridPane>
